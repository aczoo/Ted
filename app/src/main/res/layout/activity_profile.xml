<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:id="@+id/rlPfp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle">

        <ImageView
            android:id="@+id/ivPfp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignRight="@id/ivPfp"
            android:layout_alignBottom="@id/ivPfp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:clickable="true"
            app:srcCompat="@drawable/add" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@id/rlPfp"
        android:text="Frank"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/rlPfp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/accent"
        android:minHeight="0dp"
        android:onClick="logout"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Log out"
        android:textColor="#FFFFFF" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/view2">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvActivity"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                app:cardElevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#6DD2E3EC"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="#D9FFFFFF"
                        android:elevation="5dp"
                        android:gravity="left|center_vertical"
                        android:padding="5dp"
                        android:paddingStart="15dp"
                        android:text="Activity"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:baselineAligned="true"
                            android:clickable="false"
                            android:orientation="vertical">

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFiller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvActivity"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D9FFFFFF"
                    android:elevation="5dp"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFiller2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvFiller"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D9FFFFFF"
                    android:elevation="5dp"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:text="Privacy"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFiller3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvFiller2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D9FFFFFF"
                    android:elevation="5dp"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:text="Help"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

</RelativeLayout>


